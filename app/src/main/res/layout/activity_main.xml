<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvCounter"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnUpdateCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Counter"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnExecuteTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Execute Long Running Task"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnExecuteThreadTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Execute Long Running Task with Thread"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnExecuteCoroutineTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Execute Long Running Task with Coroutine" />

</LinearLayout>